<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="-0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp">

            <!-- Library Preferences -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIBRARY PREFERENCES"
                android:textColor="@color/nav_text_unselected"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- Tab Order Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_tab_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_tab_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tab Order"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customize navigation arrangement"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tab_order_title"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/nav_text_unselected"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Album Length Filter Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_album_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_album_length_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Length Filter"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter tracks by duration"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_album_length_title"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/nav_text_unselected"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- System & Maintenance -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM &amp; MAINTENANCE"
                android:textColor="@color/nav_text_unselected"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- Scanning Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_scanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_scanning_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scanning"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-index local audio files"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_scanning_title"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READY"
                        android:textColor="@color/nav_text_unselected"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_refresh"
                        app:tint="@color/nav_text_unselected" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Customize Home Page Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_customize_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_customize_home_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Customize Home Page"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_customize_home_chevron"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_customize_home_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Show or hide home boxes"
                    android:textColor="@color/text_white_opacity_60"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_customize_home_chevron"
                    app:layout_constraintTop_toBottomOf="@+id/tv_customize_home_title"/>

                <ImageView
                    android:id="@+id/iv_customize_home_chevron"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_white_opacity_60"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Deleted Tracks Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_deleted_tracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_deleted_tracks_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deleted Tracks"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View and restore deleted tracks"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_deleted_tracks_title"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/nav_text_unselected"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Pre-Release Notification Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_pre_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_pre_release_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-Release Notification"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opt-in for experimental features"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pre_release_title"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_pre_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/selector_switch_track_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFORMATION"
                android:textColor="@color/nav_text_unselected"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- Github Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_github_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Github Repository"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View source code and contribute"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_github_title"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_open_in_new"
                    app:tint="@color/nav_text_unselected"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Version Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_card"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tv_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Installed build version"
                    android:textColor="@color/nav_text_unselected"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_version_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0-BETA"
                    android:textColor="@color/text_white_opacity_60"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:alpha="0.3"
                android:layout_marginBottom="24dp">
                
                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:background="@color/text_white_opacity_60"
                    android:layout_marginBottom="8dp"/>
                
                <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="MUSICBOX INC. 2026"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:letterSpacing="0.4"
                     android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
