<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOLDERS"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="-0.05"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Breadcrumbs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_breadcrumbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/cl_header" />
        
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0DFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/rv_breadcrumbs"/>

    <!-- File List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/rv_breadcrumbs"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_nav" />
        
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO AUDIO FILES FOUND"
        android:textColor="#33FFFFFF"
        android:textSize="12sp"
        android:letterSpacing="0.1"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/rv_folders"
        app:layout_constraintBottom_toBottomOf="@+id/rv_folders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation (Include logic is duplicated in activities, ideally a fragment but sticking to pattern) -->
    <LinearLayout
        android:id="@+id/ll_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_floating_nav"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:weightSum="7"
        app:layout_constraintBottom_toBottomOf="parent">

         <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/nav_text_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home"
                android:textSize="8sp"
                android:textColor="@color/nav_text_unselected"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        
        <!-- Tracks -->
        <LinearLayout
            android:id="@+id/nav_tracks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_audiotrack"
                app:tint="@color/nav_text_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_tracks"
                android:textSize="8sp"
                android:textColor="@color/nav_text_unselected"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Albums -->
        <LinearLayout
            android:id="@+id/nav_albums"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_album"
                app:tint="@color/nav_text_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_albums"
                android:textSize="8sp"
                android:textColor="@color/nav_text_unselected"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Folders (Selected) -->
        <LinearLayout
            android:id="@+id/nav_folders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_folder"
                app:tint="@color/nav_text_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_folders"
                android:textSize="8sp"
                android:textColor="@color/nav_text_selected"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Artists -->
        <LinearLayout
            android:id="@+id/nav_artists"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                app:tint="@color/nav_text_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_artists"
                android:textSize="8sp"
                android:textColor="@color/nav_text_unselected"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Playlist -->
        <LinearLayout
            android:id="@+id/nav_playlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_queue_music"
                app:tint="@color/nav_text_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_playlist"
                android:textSize="8sp"
                android:textColor="@color/nav_text_unselected"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        
        <!-- Search -->
        <LinearLayout
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/nav_text_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_search"
                android:textSize="8sp"
                android:textColor="@color/nav_text_unselected"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
