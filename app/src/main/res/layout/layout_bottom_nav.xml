<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_floating_nav"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:elevation="8dp"
    android:weightSum="7">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_home"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Tracks -->
    <LinearLayout
        android:id="@+id/nav_tracks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_library_music"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_tracks"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Albums -->
    <LinearLayout
        android:id="@+id/nav_albums"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_album"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_albums"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Folders -->
    <LinearLayout
        android:id="@+id/nav_folders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_folder"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_folders"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Artists -->
    <LinearLayout
        android:id="@+id/nav_artists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_artists"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    
    <!-- Playlist -->
    <LinearLayout
        android:id="@+id/nav_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_queue_music"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_playlist"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Search -->
    <LinearLayout
        android:id="@+id/nav_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@color/nav_text_unselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_search"
            android:textSize="8sp"
            android:textColor="@color/nav_text_unselected"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>
