<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_chevron_left"
        app:tint="@color/white"
        android:scaleType="centerInside"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOW PLAYING"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:letterSpacing="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back" />

    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/white"
        android:scaleType="centerInside"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back" />

    <!-- Volume Bar -->
    <LinearLayout
        android:id="@+id/ll_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">

        <ImageButton
            android:id="@+id/btn_volume_down"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_remove"
            app:tint="#888888"
            android:scaleType="centerInside"
            android:contentDescription="Volume Down"/>

        <!-- Volume SeekBar -->
        <SeekBar
            android:id="@+id/sb_volume"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:progressDrawable="@drawable/custom_progress"
            android:thumb="@drawable/thumb_null"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:splitTrack="false" />

        <ImageButton
            android:id="@+id/btn_volume_up"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add"
            app:tint="#888888"
            android:scaleType="centerInside"
            android:contentDescription="Volume Up"/>
    </LinearLayout>

    <!-- Vinyl Disc Art -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_vinyl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_volume"
        app:layout_constraintBottom_toTopOf="@+id/cl_track_info">
        
        <!-- Outer Rings -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_circle_red"
            android:backgroundTint="#0DFFFFFF"/>
        
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_vinyl_inner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
            
        <!-- Album Art -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="200dp"
            app:cardElevation="0dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ImageView
                android:id="@+id/iv_album_art_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/background_dark" />
                
                
        </androidx.cardview.widget.CardView>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Track Info -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_track_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sb_progress">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_fav_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_now_playing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENDLESS SUMMER"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:textAllCaps="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"/>

            <TextView
                android:id="@+id/tv_now_playing_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE DOTS â€¢ NOTHING VOL. 1"
                android:textColor="#888888"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_fav_large"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_favorite_border"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Progress Bar -->
    <SeekBar
        android:id="@+id/sb_progress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@drawable/thumb_null"
        android:progress="65"
        android:max="100"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_time_start" />

    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:34"
        android:textColor="#888888"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_play_large" />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:45"
        android:textColor="#888888"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_time_start" />

    <!-- Controls -->
    <ImageButton
        android:id="@+id/btn_shuffle_large"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_shuffle"
        app:tint="#888888"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_play_large"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_large" />

    <ImageButton
        android:id="@+id/btn_prev_large"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_previous"
        app:tint="@color/white"
        android:scaleType="centerInside"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_play_large"
        app:layout_constraintTop_toTopOf="@+id/btn_play_large"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_large" />

    <ImageButton
        android:id="@+id/btn_play_large"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/shape_circle_red"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_pause"
        app:tint="@color/black"
        android:scaleType="centerInside"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/btn_next_large"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_next"
        app:tint="@color/white"
        android:scaleType="centerInside"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/btn_play_large"
        app:layout_constraintTop_toTopOf="@+id/btn_play_large"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_large" />

    <ImageButton
        android:id="@+id/btn_repeat_large"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_repeat"
        app:tint="@color/primary_red"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_play_large"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_large" />
    
    <!-- Footer Icon -->
    <!-- Footer Icons -->
    <ImageView
        android:id="@+id/btn_sleep_timer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_timer"
        app:tint="#888888"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_queue"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/btn_queue"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_queue_music"
        app:tint="#888888"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_large"
        app:layout_constraintStart_toEndOf="@+id/btn_sleep_timer"
        app:layout_constraintEnd_toStartOf="@+id/btn_equalizer"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/btn_equalizer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_equalizer"
        app:tint="#888888"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_large"
        app:layout_constraintStart_toEndOf="@+id/btn_queue"
        app:layout_constraintEnd_toEndOf="parent"/>
    


</androidx.constraintlayout.widget.ConstraintLayout>
