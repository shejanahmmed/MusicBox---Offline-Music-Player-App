<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_mini_player"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_mini_player"
    android:paddingStart="8dp"
    android:paddingEnd="16dp"
    android:visibility="gone"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/iv_mini_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_track_card"
        android:src="@color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@+id/iv_mini_art"
        app:layout_constraintEnd_toStartOf="@+id/ll_mini_controls"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_mini_title"
            android:text="NOT PLAYING"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/tv_mini_artist"
            android:text="--"
            android:textColor="@color/text_white_opacity_40"
            android:textSize="8sp"
            android:textAllCaps="true"
            android:letterSpacing="0.2"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mini_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_mini_prev"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/white"
            android:scaleType="fitCenter"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btn_mini_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_play_arrow"
            app:tint="@color/primary_red"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_mini_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/white"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
