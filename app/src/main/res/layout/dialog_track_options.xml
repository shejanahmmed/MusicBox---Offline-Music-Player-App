<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:padding="24dp">

    <!-- Header with Album Art and Track Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_track_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/background_dark" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_track_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist • Album"
                android:textColor="@color/primary_red"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Track Technical Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_section"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <!-- First Row: Bitrate, Sample Rate, Size -->
        <TextView
            android:id="@+id/tv_track_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 kbit/s    48000 Hz    12.93 MB"
            android:textColor="#888888"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <!-- Second Row: Path and Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_track_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/storage/emulated/0/Music/..."
                android:textColor="#666666"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="middle"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_format_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUDIO/MPEG"
                android:textColor="#000000"
                android:textSize="9sp"
                android:textStyle="bold"
                android:background="#CCCCCC"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_duration_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱ 5:23"
                android:textColor="#000000"
                android:textSize="9sp"
                android:textStyle="bold"
                android:background="#CCCCCC"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_card_section"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_favorite_border"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_add_to_playlist"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_playlist_add"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_set_as"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_image"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            app:tint="@color/white" />
    </LinearLayout>


</LinearLayout>
