            android:pathData="M50,18 A32,32 0 1,1 50,82 A32,32 0 1,1 50,18"
            android:strokeWidth="0.5"
            android:strokeColor="#FF282828"/>
        <path
            android:pathData="M50,25 A25,25 0 1,1 50,75 A25,25 0 1,1 50,25"
            android:strokeWidth="0.5"
            android:strokeColor="#FF282828"/>

        <!-- Central Label (Matte Red) -->
        <path
            android:pathData="M50,34 A16,16 0 1,1 50,66 A16,16 0 1,1 50,34"
            android:fillColor="#FFC62828"/>

        <!-- Center Circle (Deep Ash) -->
        <path
            android:pathData="M50,42 A8,8 0 1,1 50,58 A8,8 0 1,1 50,42"
            android:fillColor="#FF262521"/>
            
    </group>

</vector>
